<UserControl x:Class="JaegerMeister.MvvmSample.Ui.Desktop.GUI_TerminErstellen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JaegerMeister.MvvmSample.Ui.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
              DataContext="{Binding LogicTerminErstellen, Source={StaticResource Locator}}"
             >

    <ContentControl x:Name="ContentControlTerminErstellen">
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition  Width="15"/>
                <ColumnDefinition  Width="150"/>
                <ColumnDefinition  Width="15"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="25"/>

            </Grid.RowDefinitions>
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Background="Transparent">
                <Image Source="pfeillinks.png" Height="70" Margin="-63,0,-72,0" RenderTransformOrigin="0.493,0.757"  />
                <Image  Height="70" Margin="-91,0,-82,0" Source="pfeilrechts.png"  />
            </StackPanel>
            <StackPanel Grid.Row="0" Background="White">

                <Label Background="#4F772D"  Foreground="White">
                    <TextBlock FontSize="14" TextAlignment="Center" Width="240" Height="20" >Personen</TextBlock>

                </Label>
                <ListBox ItemsSource="{Binding personen }"  Height="394">

                </ListBox>
            </StackPanel>
            <StackPanel Grid.Row="3">
                <Button Command="{ Binding hizufuegen}" Height="25">hinzufügen</Button>
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="2">
                <Button Command="{ Binding entfernen}" Height="25">entfernen</Button>
            </StackPanel>
            <StackPanel Grid.Column="2">


            </StackPanel>
            <StackPanel  Grid.Column="4" Background="White">
                <Label Background="#4F772D" Foreground="White" >
                    <TextBlock FontSize="14" TextAlignment="Center" Width="341" Height="20" >Termin erstellen</TextBlock>

                </Label>
                <Label></Label>
                <Label></Label>
                <Label Margin="20,1">Bezeichnung</Label>
                <TextBox Text="{Binding bezeichnung}" Margin="20,1"></TextBox>
                <Label Margin="20,1">Wo?</Label>
                <TextBox Text="{Binding wo}" Margin="20,1"></TextBox>
                <Label Margin="20,1">Datum</Label>
                <DatePicker Margin="20,1" SelectedDate="{Binding date}"></DatePicker>
                <Label Margin="20,1">Uhrzeit</Label>
                <TextBox Margin="20,1" Text="{Binding uhrzeit}"></TextBox>

            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="4">
                <TextBlock HorizontalAlignment="Right">
                    <Button Margin="10,3,10,0" Command="{Binding abbruch}">Abbruch</Button>
                    <Button Command="{Binding bestaetigen}">Bestätigen</Button>
                </TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="2" Background="White">
                <Label Background="#4F772D" Foreground="White" >
                    <TextBlock FontSize="14" TextAlignment="Center" Width="141" Height="20" >Bereits eingladen</TextBlock>

                </Label>
                <ListBox ItemsSource="{Binding entfernen }"  Height="394"></ListBox>


            </StackPanel>



        </Grid>
    </ContentControl>
</UserControl>
