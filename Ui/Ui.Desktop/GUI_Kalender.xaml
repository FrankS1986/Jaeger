<UserControl x:Class="JaegerMeister.MvvmSample.Ui.Desktop.GUI_Kalender"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:JaegerMeister.MvvmSample.Ui.Desktop"
             mc:Ignorable="d" 
             DataContext="{Binding logic_Kalender, Source={StaticResource Locator}}"
             d:DesignHeight="360" d:DesignWidth="800" Width="800" Height="360" MinHeight="360" MinWidth="800">

    <ContentControl x:Name="ContentControlTerminErstellen">
        <Grid Name="Grid_Kalender"  >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="15"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid x:Name="Grid_DataGridTermine" Background="#4F772D"  >
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="Termine" Foreground="#E0CBA8" FontSize="22" FontFamily="Gill Sans MT Regular" HorizontalAlignment="Center"   ></Label>
                <Button Name="TerminHinzufuegen" Background="{x:Null}" Height="35" Width="35" VerticalAlignment="Top" HorizontalAlignment="Right"  Click="TerminHinzufuegen_Click"  >
                    <Image Source="Icons/HinzufügenIcon.png"></Image>
                </Button>
            </Grid>
            <DataGrid  Grid.Row="1" Grid.RowSpan="2"  ItemsSource="{Binding Dg_TermineKalender}" FontFamily="Gill Sans MT" FontSize="16" MinColumnWidth="196" IsReadOnly="True" IsManipulationEnabled="True" IsTextSearchCaseSensitive="True" />
            <Viewbox  HorizontalAlignment="Center" VerticalAlignment="Center" Name="ViewBoxKalender" Grid.Column="2"   Grid.RowSpan="2"  Stretch="Uniform"   >
                <Calendar Name="Kalender"   SelectedDate="{Binding SelectedDates}" />
            </Viewbox>
            <DataGrid Background="White"  Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2"   ItemsSource="{Binding Dg_KalenderAnzeige }"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontFamily="Gill Sans MT" FontSize="16" IsManipulationEnabled="True" IsReadOnly="True" />
        </Grid>
        
    </ContentControl>
</UserControl>
